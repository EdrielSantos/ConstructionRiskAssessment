<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aboutbg"
    tools:context=".AboutFragment">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="164dp"
        android:layout_height="63dp"
        android:text="Karl Vrad Nuyda              Railway Systems"
        android:textColor="#304FFE"
        android:textSize="18sp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toEndOf="@id/imageView2"
        tools:layout_editor_absoluteX="210dp"
        tools:layout_editor_absoluteY="288dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="210dp"
        android:layout_height="124dp"
        android:shadowColor="#1B1919"
        android:text="Christian Rabadon                 Intelligent Systems"
        android:textColor="#25916F"
        android:textSize="18sp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintStart_toEndOf="@id/imageView3"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="154dp"
        android:layout_height="145dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/santos"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="154dp"
        android:layout_height="145dp"
        android:layout_below="@id/imageView"
        android:src="@drawable/nuyda"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="154dp"
        android:layout_height="145dp"
        android:layout_below="@id/imageView2"
        android:src="@drawable/rabadon"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="164dp"
        android:layout_height="63dp"
        android:text="Edriel Santos                 Intelligent Systems"
        android:textColor="#F44336"
        android:textSize="18sp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
