<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegistrationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/regbg"
        >

        <TextView
            android:id="@+id/regTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:text="Register your Account"
            android:textColor="@color/login_ek1_color"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/usernameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/regTxt"
            android:layout_marginStart="27dp"
            android:layout_marginTop="40dp"
            android:text="Username:"
            android:textColor="@color/login_ek1_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/regUsername"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/usernameTxt"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="27dp"
            android:ems="17"
            android:hint="Enter your username"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/passwordTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/regUsername"
            android:layout_marginStart="27dp"
            android:layout_marginTop="20dp"
            android:text="Password:"
            android:textColor="@color/login_ek1_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/regPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/passwordTxt"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="27dp"
            android:ems="17"
            android:hint="Enter your password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/enter_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/regPassword"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="27dp"
            android:layout_marginTop="40dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/custom_button" />

    </RelativeLayout>
</layout>
